<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_forget_password"
    tools:context="droidahmed.com.jm3eia.account.ForgetPassword">
<EditText
    android:id="@+id/edForgetPass"
     android:paddingLeft="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginTop="20dp"
    android:inputType="textEmailAddress"
    android:background="@drawable/edit_border"
    android:hint="@string/email_forget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnForgetPass"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edForgetPass"
        android:layout_marginTop="20dp"
        android:text="@string/send_forget"
        android:textColor="#fff"
        android:background="@drawable/button_green"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
