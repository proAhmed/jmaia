<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"   android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="8dp"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:background="#EBEBEC">




        <droidahmed.com.jm3eia.adapter.EndlessListView
            android:id="@+id/grid"
            android:numColumns="2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:horizontalSpacing="1.5dp"
            android:verticalSpacing="0.5dp"
            />
        <ProgressBar
            android:id="@+id/progressBar"
            android:progressBackgroundTint="#FAAF52"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"

            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:visibility="invisible"
            />

    </RelativeLayout>
